{
    "name": "@democrance/imagemin-lint-staged",
    "type": "module",
    "version": "5.0.0",
    "packageManager": "pnpm@10.19.0",
    "description": "Easily configure imagemin to work with lint-staged",
    "author": "Daniil Chumachenko <daniil4udo@gmail.com>",
    "license": "MIT",
    "keywords": [
        "lint-staged",
        "imagemin"
    ],
    "bin": {
        "image-lint-staged": "./dist/bin/cli.js",
        "imagemin-lint-staged": "./dist/bin/cli.js"
    },
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "build": "tsdown",
        "lint": "eslint . --fix --color",
        "prepublishOnly": "pnpm build",
        "release": "bumpp --commit --tag --no-push && pnpm publish --access public",
        "test": "rm -rf tests/__snapshots__/index.spec.js.snap && vitest"
    },
    "dependencies": {
        "@democrance/utils": "^2.1.0",
        "cosmiconfig": "^9.0.0",
        "exif-reader": "^2.0.2",
        "pretty-bytes": "^7.1.0",
        "sharp": "^0.34.4",
        "svgo": "^4.0.0",
        "tinypool": "^2.0.0"
    },
    "devDependencies": {
        "@democrance/eslint-config": "^3.1.0",
        "@tsconfig/node22": "^22.0.2",
        "@types/node": "^24.9.1",
        "bumpp": "^10.3.1",
        "eslint": "^9.38.0",
        "tsdown": "^0.15.9",
        "typescript": "~5.9.3",
        "vitest": "^4.0.1"
    }
}
