// https://github.com/vuejs/tsconfig#configuration-for-node-environments
{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "strict": true,
        "pretty": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": [
        "env.d.ts",
        "./lib/*.ts",
        "./bin/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests/*"
    ]
}
